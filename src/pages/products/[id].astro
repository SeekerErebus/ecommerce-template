---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PromoBar from '../../components/PromoBar.astro';
import Header from '../../components/Header.astro';
import ProductCard from '../../components/ProductCard.astro';
import CartSidebar from '../../components/CartSidebar.astro';
import Footer from '../../components/Footer.astro';
import products from '../../data/products.json';

export function getStaticPaths() {
  return products.map((product) => ({
    params: { id: product.id },
    props: { product },
  }));
}

interface Props {
  product: (typeof products)[number];
}

const { product } = Astro.props;

// Related products: same category, excluding current
const related = products
  .filter((p) => p.category === product.category && p.id !== product.id)
  .slice(0, 4);

// If fewer than 4 related, fill with random other products
const otherProducts = products.filter(
  (p) => p.id !== product.id && !related.find((r) => r.id === p.id)
);
while (related.length < 4 && otherProducts.length > 0) {
  related.push(otherProducts.shift()!);
}
---

<BaseLayout title={product.name} description={product.description}>
  <PromoBar />
  <Header />

  <!-- Breadcrumb -->
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <ol class="flex items-center gap-2 text-sm text-thread-500">
      <li>
        <a href="/" class="hover:text-ember-600 transition-colors">Shop</a>
      </li>
      <li>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
        </svg>
      </li>
      <li>
        <a href={`/?category=${product.category}`} class="hover:text-ember-600 transition-colors capitalize">
          {product.category}
        </a>
      </li>
      <li>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
        </svg>
      </li>
      <li class="text-charcoal font-medium truncate">{product.name}</li>
    </ol>
  </nav>

  <!-- Product Detail -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16">
      <!-- Product Image -->
      <div class="aspect-square bg-thread-100 rounded-2xl overflow-hidden">
        <img
          src={product.image}
          alt={product.name}
          class="w-full h-full object-cover"
        />
      </div>

      <!-- Product Info -->
      <div class="flex flex-col justify-center py-4">
        <div class="flex items-center gap-3 mb-3">
          <span class="text-xs font-semibold text-thread-500 uppercase tracking-wider">
            {product.category}
          </span>
          {product.badge && (
            <span class="px-2.5 py-0.5 bg-ember-100 text-ember-700 text-xs font-semibold rounded-full">
              {product.badge}
            </span>
          )}
        </div>

        <h1 class="font-serif text-3xl sm:text-4xl font-bold text-charcoal">
          {product.name}
        </h1>

        <p class="mt-4 text-3xl font-bold text-charcoal">
          ${product.price}
        </p>

        <p class="mt-6 text-base text-thread-600 leading-relaxed">
          {product.description}
        </p>

        <!-- Quantity + Add to Cart -->
        <div class="mt-8 flex flex-col sm:flex-row gap-4">
          <div class="flex items-center border border-thread-200 rounded-lg overflow-hidden">
            <button
              id="qty-decrease"
              class="w-12 h-12 flex items-center justify-center text-thread-600 hover:text-ember-600 hover:bg-thread-50 transition-colors"
              aria-label="Decrease quantity"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14" />
              </svg>
            </button>
            <span
              id="qty-display"
              class="w-12 h-12 flex items-center justify-center text-sm font-semibold text-charcoal border-x border-thread-200"
            >
              1
            </span>
            <button
              id="qty-increase"
              class="w-12 h-12 flex items-center justify-center text-thread-600 hover:text-ember-600 hover:bg-thread-50 transition-colors"
              aria-label="Increase quantity"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
              </svg>
            </button>
          </div>

          <button
            id="add-to-cart-detail"
            class="flex-1 sm:flex-none sm:px-12 py-3 bg-ember-600 hover:bg-ember-700 text-white font-semibold rounded-lg transition-colors flex items-center justify-center gap-2"
            data-product-id={product.id}
            data-product-name={product.name}
            data-product-price={product.price}
            data-product-image={product.image}
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 1 0-7.5 0v4.5m11.356-1.993 1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 0 1-1.12-1.243l1.264-12A1.125 1.125 0 0 1 5.513 7.5h12.974c.576 0 1.059.435 1.119 1.007ZM8.625 10.5a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm7.5 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
            </svg>
            Add to Cart
          </button>
        </div>

        <!-- Details Accordion -->
        <div class="mt-10 space-y-0 border-t border-thread-200">
          <details class="group border-b border-thread-200">
            <summary class="flex items-center justify-between py-4 cursor-pointer text-sm font-semibold text-charcoal">
              Materials & Care
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-thread-400 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
              </svg>
            </summary>
            <p class="pb-4 text-sm text-thread-600 leading-relaxed">
              Each piece is crafted from carefully sourced materials. Please refer to the product description for specific materials. We recommend hand washing when possible and avoiding harsh chemicals.
            </p>
          </details>
          <details class="group border-b border-thread-200">
            <summary class="flex items-center justify-between py-4 cursor-pointer text-sm font-semibold text-charcoal">
              Shipping & Returns
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-thread-400 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
              </svg>
            </summary>
            <p class="pb-4 text-sm text-thread-600 leading-relaxed">
              Free shipping on orders over $100. Standard shipping (5-7 business days) is $8.95. We accept returns within 30 days of delivery. Items must be unused and in original packaging.
            </p>
          </details>
        </div>
      </div>
    </div>

    <!-- Related Products -->
    {related.length > 0 && (
      <div class="mt-16 sm:mt-24">
        <h2 class="font-serif text-2xl font-bold text-charcoal mb-8">
          You might also like
        </h2>
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 sm:gap-6">
          {related.map((p) => (
            <ProductCard
              id={p.id}
              name={p.name}
              price={p.price}
              category={p.category}
              image={p.image}
              badge={p.badge}
            />
          ))}
        </div>
      </div>
    )}
  </section>

  <Footer />
  <CartSidebar />
</BaseLayout>

<script>
  let qty = 1;
  const display = document.getElementById('qty-display');
  const decreaseBtn = document.getElementById('qty-decrease');
  const increaseBtn = document.getElementById('qty-increase');
  const addBtn = document.getElementById('add-to-cart-detail');

  decreaseBtn?.addEventListener('click', () => {
    if (qty > 1) {
      qty--;
      if (display) display.textContent = String(qty);
    }
  });

  increaseBtn?.addEventListener('click', () => {
    qty++;
    if (display) display.textContent = String(qty);
  });

  addBtn?.addEventListener('click', () => {
    const target = addBtn as HTMLElement;
    const product = {
      id: target.dataset.productId,
      name: target.dataset.productName,
      price: Number(target.dataset.productPrice),
      image: target.dataset.productImage,
    };

    for (let i = 0; i < qty; i++) {
      window.emberCart?.add(product);
    }

    // Visual feedback
    const originalHTML = target.innerHTML;
    target.innerHTML = `
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
      </svg>
      Added to Cart!
    `;
    target.classList.add('bg-green-600');
    target.classList.remove('bg-ember-600');

    // Open cart sidebar
    const sidebar = document.getElementById('cart-sidebar');
    const overlay = document.getElementById('cart-overlay');
    setTimeout(() => {
      sidebar?.classList.remove('translate-x-full');
      overlay?.classList.remove('hidden');
    }, 300);

    setTimeout(() => {
      target.innerHTML = originalHTML;
      target.classList.remove('bg-green-600');
      target.classList.add('bg-ember-600');
    }, 1500);
  });
</script>
